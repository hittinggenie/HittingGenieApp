<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.VideoPages.PracticeVideo"
             
             Title="">
    <VerticalStackLayout>
        <Label Text="You must begin getting ready when the person throwing the ball to you moves."/>
         <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
        <Label Text="When they move, you move." />
        <Label Text="Watch this video to confirm we are on the same page" />
       
          <WebView x:Name="videoPlayer" Source="https://www.youtube.com/embed/lAY2OQ5Den0" WidthRequest="0" HeightRequest="250" />
        <Button x:Name="VideoWatched" Text="I Watched the Video" Clicked="VideoWatched_Clicked" />
    </VerticalStackLayout>
</ContentPage>
