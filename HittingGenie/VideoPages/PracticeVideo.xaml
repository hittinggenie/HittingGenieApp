<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.VideoPages.PracticeVideo"
              xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="PracticeVideo">
    <VerticalStackLayout>
        <Label Text="You must begin getting ready when the person throwing the ball to you moves."/>
        <Label Text="When they move, you move." />
        <Label Text="Watch this video to confirm we are on the same page" />
       
          <toolkit:MediaElement x:Name="mediaElement" Source="embed://AppFrontTossTiming.mp4" MediaEnded="mediaElement_MediaEnded" ShouldShowPlaybackControls="True" Aspect="AspectFill" />
    </VerticalStackLayout>
</ContentPage>
