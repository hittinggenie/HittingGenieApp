<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.SavePlacePage"
             Title="SavePlacePage">
    <VerticalStackLayout Spacing="35" >
    <Label Text="Greetings. Your wish is my command." />
     <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75" />
    <Label Text="You recently saved your progress. Would you like to pick up where you left off on your last wish? " Padding="0,0,0,0"/>
    <Button x:Name="YesBtn"  Text="Yes" Clicked="YesBtn_Clicked"/>
    <Button x:Name="NoBtn" Text="No, Grant Me a New Wish" Clicked="NoBtn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
