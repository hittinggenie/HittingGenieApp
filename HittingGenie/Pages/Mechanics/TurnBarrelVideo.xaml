<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.TurnBarrelVideo" Shell.BackgroundColor="Black"
             Title="">
    <VerticalStackLayout>
        <Label Text="Watch the video below to proceed." />
       <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
              <WebView x:Name="videoPlayer" Source="https://www.youtube.com/embed/ANk_MEIlhnU?rel=0" WidthRequest="0" HeightRequest="250" />
         <Button x:Name="VideoWatched" Text="I Watched the Video" Clicked="VideoWatched_Clicked" />
        <Label x:Name="Lbl2" Text="Did this help?" IsVisible="false" />
        <Button x:Name="Yes" Text="Yes" Clicked="Yes_Clicked" IsVisible="false"/>
        <Button x:Name="No" Text="No" Clicked="No_Clicked" IsVisible="false" />
    </VerticalStackLayout>
</ContentPage>
