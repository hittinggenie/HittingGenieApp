<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.MakeContact" Shell.BackgroundColor="Black"
             Title="">
    <VerticalStackLayout>
        <Label Text="When you make contact which direction does the ball go?" />
       <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
        <Button x:Name="PullSide" Text="Toward the Pull Side" Clicked="PullSide_Clicked" />
        <Button x:Name="OppoField" Text="Toward the Opposite Field" Clicked="OppoField_Clicked" />
        <Button x:Name="NotMuch" Text="I'm Not Making Much Contact" Clicked="NotMuch_Clicked" />
    </VerticalStackLayout>
</ContentPage>
