<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.Coiled" Shell.BackgroundColor="Black"
             Title="Coiled">
    <VerticalStackLayout>
       <Label 
            Text="Setting your hips turned or 'coiled' slightly toward the catcher will help you store power and help your balance." FontAttributes="Bold" />
        
        <Label x:Name="Lbl2" Text="You should feel 'cornered' around your back leg. " FontAttributes="Bold" IsVisible="false"/>
        <Label x:Name="Lbl3" Text="Are your hips set this way?" FontAttributes="Bold" IsVisible="false"/>
        <Button x:Name="Navigator" Text="How Does This Help?" Clicked="Navigator_Clicked" />
        <Button x:Name="YesBtn" Text="Yes" Clicked="YesBtn_Clicked" IsVisible="false"/>
        <Button x:Name="NoBtn" Text="No" Clicked="NoBtn_Clicked" IsVisible="false"/>
       <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
    </VerticalStackLayout>
</ContentPage>
