<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.ArmsLoose" Shell.BackgroundColor="Black"
             Title="ArmsLoose">
    <VerticalStackLayout>
        <Label Text="Perfect. Next, having loose arms allows for a fast, whipping action of the bat. Have the feeling the bat is weightless as you hold it." />
        <Label Text="Are your arms loose?" />
        <Button x:Name="YesBtn" Text="Yes" Clicked="YesBtn_Clicked" />
        <Button x:Name="NoBtn" Text="No" Clicked="NoBtn_Clicked" />
          <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
    </VerticalStackLayout>
</ContentPage>
