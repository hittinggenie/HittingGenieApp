<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.StartingPosition" Shell.BackgroundColor="Black"
             Title="StartingPosition">
    <VerticalStackLayout>
          <Label 
            Text="Your lower body is now set!"/>
        <Label x:Name="Lbl2" Text="Next, feel a stretch up through your back so your upper body is also cornered around your back leg."  IsVisible="false"/>
        <Label x:Name="Lbl3" Text="Do you have that feeling?" IsVisible="false"/>
        <Button x:Name="Navigator" Text="Hooray!" Clicked="Navigator_Clicked" />
        <Button x:Name="YesBtn" Text="Yes" Clicked="YesBtn_Clicked" IsVisible="false"/>
        <Button x:Name="NoBtn" Text="No" Clicked="NoBtn_Clicked" IsVisible="false"/>
        <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
    </VerticalStackLayout>
</ContentPage>
