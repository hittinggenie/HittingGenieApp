<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.StartLoading" Shell.BackgroundColor="Black"
             Title="StartLoading">
    <VerticalStackLayout>
        <Label Text="Well done! When beginning to load, you should begin when the pitcher's lead knee lifts and is at its highest point." />
        <Label Text="Are you doing that correctly?" />
        <Button x:Name="YesBtn" Text="Yes" Clicked="YesBtn_Clicked" />
        <Button x:Name="NoBtn" Text="No" Clicked="NoBtn_Clicked" />
       <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
    </VerticalStackLayout>
</ContentPage>
