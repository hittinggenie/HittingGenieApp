<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.CommonBelief" Shell.BackgroundColor="Black"
             Title="">
    <VerticalStackLayout>
        <Label x:Name="Lbl1" Text="When swinging a bat there is a common belief that the front foot should land completely on the ground and then the hips open and the hands follow." />
      <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
        <Label x:Name="Lbl2" Text="Have you heard this before?" IsVisible="true" />
        <Label x:Name="Lbl3" Text="Have you been told you need to get your front foot down early so you are ready?" IsVisible="false" />
        <Button x:Name="YesBtn" Text="Yes" Clicked="YesBtn_Clicked" />
        <Button x:Name="NoBtn" Text="No" Clicked="NoBtn_Clicked" />
    </VerticalStackLayout>
</ContentPage>
