<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.ConnectedGround" Shell.BackgroundColor="Black"
             Title="ConnectedGround">
    <VerticalStackLayout>
      <Label Text="Next, feel that you are connected to the ground." FontAttributes="Bold" Padding="0,10,0,0"></Label>
        <Label x:Name="Lbl2" Text="Your back foot should feel the weight is more in your heel. Spread your toes to also help balance." FontAttributes="Bold" IsVisible="false"/>
        <Label x:Name="Lbl3" Text="Is your back foot set this way?" FontAttributes="Bold" IsVisible="false"/>
        <Button x:Name="Navigator" Text="What Does This Mean?" Clicked="Navigator_Clicked"/>
        <Button x:Name="YesBtn" Text="Yes" Clicked="YesBtn_Clicked" IsVisible="false"/>
        <Button x:Name="NoBtn" Text="No" Clicked="NoBtn_Clicked" IsVisible="false"/>
        <Button x:Name="NotSureBtn" Text="I'm Not Sure" Clicked="NotSureBtn_Clicked" IsVisible="false" />
       <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
    </VerticalStackLayout>
</ContentPage>
