<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.Mechanics.Honesty" Shell.BackgroundColor="Black"
             Title="">
    <VerticalStackLayout>
         <Label 
            Text="Thanks for your honesty! Most hitters are 'on' the ground, but you must be 'in' the ground too using it for stability and power." />
            <Label x:Name="Lbl2" Text="Set up your back foot so the weight is in your heel. Spread your toes out to also help your balance." IsVisible="false"/>
            <Label x:Name="Lbl3" Text="You can now save your progress or I can show you the next step." IsVisible="false"/>
        <Button x:Name="Navigator" Clicked="Navigator_Clicked" Text="How Else Can I Fix This?"/>
        <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
        <Button x:Name="Save" Text="No. Save My Progress" Clicked="Save_Clicked" IsVisible="false"/>
        <Button x:Name="YesBtn" Text="Yes, Please Tell Me!" Clicked="YesBtn_Clicked" IsVisible="false"/>
    </VerticalStackLayout>
</ContentPage>
