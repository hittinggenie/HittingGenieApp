<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.ReadyAtRelease"
             Title="">
    <VerticalStackLayout>
        <Label x:Name="Lbl1" Text="Be more 'ready at release'." Padding="25,25,25,25" />
        <Label x:Name="Lbl2" Text="This means when the ball is leaving the pitcher's hand, you must feel you are able to swing your bat and stay balanced at that moment if you needed to."/>
        <Button x:Name="Ok" Text="Okay" Clicked="Ok_Clicked" />
        <Button x:Name="DoesntWork" Text="What if This Doesn't Work?" Clicked="DoesntWork_Clicked" />
      <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
    </VerticalStackLayout>
</ContentPage>
