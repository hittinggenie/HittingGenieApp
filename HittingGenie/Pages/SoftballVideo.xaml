<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.SoftballVideo"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="SoftballVideo">
    <VerticalStackLayout>
        <Label Text="Watch the video to proceed." />
         <toolkit:MediaElement x:Name="mediaElement" Source="embed://AppSoftballHittingTiming.mp4" ShouldShowPlaybackControls="True" Aspect="AspectFill" MediaEnded="mediaElement_MediaEnded"  />

        <Label x:Name="Lbl3" Text="Did this work?" IsVisible="false"/>
          <Button x:Name="Yes" Clicked="Yes_Clicked" Text="Yes, It Worked! Thanks Hitting Genie!" IsVisible="false"></Button>
        <Button x:Name="No" Clicked="No_Clicked" Text="I Got Ready Better, but Still Not Great." IsVisible="false"></Button>
    </VerticalStackLayout>
</ContentPage>
