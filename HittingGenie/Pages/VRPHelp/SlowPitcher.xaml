<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             x:Class="HittingGenie.Pages.VRPHelp.SlowPitcher"
             Title="">
   <VerticalStackLayout>
        <Label x:Name="Lbl1"
            Text="Are you facing a really slow pitcher?" />
      <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
          <WebView x:Name="videoPlayer" Source="https://www.youtube.com/embed/1yjTkbHZHAM?rel=0" WidthRequest="0" HeightRequest="250" IsVisible="false"/>
         <Button x:Name="VideoWatched" Text="I Watched the Video" Clicked="VideoWatched_Clicked" IsVisible="false" />
        <Button x:Name="YesBtn" Text="Yes" Clicked="YesBtn_Clicked"  />
        <Button x:Name="NoBtn" Text="No" Clicked="NoBtn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
