<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HittingGenie.Pages.VRPHelp.Attention" Shell.BackgroundColor="Black"
             >
     <VerticalStackLayout Spacing="15">
      <Image x:Name="logo" Source="genie1.png" WidthRequest="75" HeightRequest="75"/>
         <Label x:Name="GoalLbl" Padding="0,20,0,40"
            Text="If your goal is to hit the ball as hard as you can, you can't be thinking about how to swing while doing it."  />
         <Label Padding="0,20,0,40" x:Name="VRPLbl" 
            Text="Use a Visual Reference Point (VRP) to help!" IsVisible="false"/>
         <Button  x:Name="MultiUseBtn" Text="What Should I Do, Then?" Clicked="MultiUseBtn_Clicked"  VerticalOptions="EndAndExpand" />
         
    </VerticalStackLayout>
</ContentPage>
